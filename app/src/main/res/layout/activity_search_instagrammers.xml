<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/application_background"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context=".instagrammers.view.activity.InstagrammersListActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/find_instagrammers_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/instagrammers_list_padding"
        android:paddingTop="@dimen/instagrammers_list_padding"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:visibility="gone"
        tools:visibility="invisible"/>


    <ProgressBar
        android:id="@+id/find_instagrammers_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:visibility="gone"
        tools:visibility="invisible"/>

    <TextView
        android:id="@+id/find_instagrammers_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="16dp"
        android:text="@string/find_instagrammers_empty_message"
        android:textSize="20sp"
        android:visibility="gone"
        tools:visibility="visible" />

</android.support.design.widget.CoordinatorLayout>
