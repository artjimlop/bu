<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/saved_picture_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.losextraditables.bu.pictures.view.activity.SavedPictureActivity"
    tools:showIn="@layout/activity_saved_picture"
    android:gravity="center"
    android:background="@color/application_background">

  <ImageView android:id="@+id/saved_picture"
      android:layout_width="match_parent"
      android:layout_height="350dp"
      android:scaleType="centerCrop"
      android:layout_marginBottom="100dp"/>
</RelativeLayout>
